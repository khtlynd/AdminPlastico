<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dashboard Plastico</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="style.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="chart.css" />
    <link href="https://fonts.googleapis.com/css?family=OpenSans" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <link rel="stylesheet" href="/static/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.8.1/firebase.js"></script>
    <script src="js/firebase_config.js"></script>
    <script src="js/login_checker.js"></script>
</head>

<body class="bg-1">
    <!--loading-->
    <div class="loading">Loading&#8230;</div>

    <!-- TOP-NAVBAR -->
    <div class="top-navbar">
        <div class="topnav-container">
            <a class="logout" onClick="logout()" href="javascript:void(0)" style="font-weight: bold; float: right;">Logout</a>
        </div>
    </div>

    <!-- SIDE NAVIGATION BAR -->
    <div class="sidenav">
        <div class="container sidenav-container">
            <!-- P Logo  -->
            <img class="logo" src="img/plastico_p-02.png">
            <hr class="light">

            <!-- SIDENAVBAR MENU -->
            <a href="dashboard">
                <i class="fa fa-home" aria-hidden="true" style="padding-right: 10px;"></i>Dashboard
            </a>
            <a href="bin">
                <i class="fa fa-trash" aria-hidden="true" style="padding-right: 10px;"></i>Bin</a>
            <a class="active" href="user">
                <i class="fa fa-users" aria-hidden="true" style="padding-right: 10px;"></i>User</a>
            <a href="article">
                <i class="fa fa-newspaper-o" aria-hidden="true" style="padding-right: 10px;"></i>Article</a>
            <a href="goals">
                <i class="fa fa-trophy" aria-hidden="true" style="padding-right: 10px;"></i>Goals</a>
            <a href="rewards">
                <i class="fa fa-money" aria-hidden="true" style="padding-right: 10px;"></i>Reward</a>
        </div>
    </div>

    <!-- CONTENT -->
    <div class="main">
        <div class="row">
            <div class="container">
                <h3>User</h3>
            </div>
        </div>

        <!-- CARD -->
        <div class="row" style="padding-bottom:30px; position:center">

            <div class="col-lg-3 col-md-4">
                <div class="card-sm" style="text-align:center; color: white; background-color: #3bb4c1;">
                    <h5>Total Users</h5>
                    <h1 id="allUser">
                    </h1>
                </div>
            </div>

            <div class="col-lg-3 col-md-4">
                <div class="card-sm" style="text-align:center; color: white; background-color: #00909e;">
                    <h5>Total Active Users</h5>
                    <h1 id="totalUser">
                    </h1>
                </div>
            </div>

            <div class="col-lg-3 col-md-4">
                <div class="card-sm" style="text-align:center; color: white; background-color: #21577a;">
                    <h5>Deactivated Users</h5>
                    <h1 id="deactUser">
                    </h1>
                </div>
            </div>
        </div>

        <!-- TOTAL USER ENGAGEMENT -->
        <div class="row" style="padding-bottom:30px">
            <div class="col-12">
                <div class="card">
                    <h5 style="padding-bottom:10px">List of Users</h5>
                    <table id="dataUser">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Current Point</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        <!-- USER ACTIVITY PERFORMANE -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h5 style="padding-bottom: 10px;">User Activity Performance</h5>
                    <p>This shows the monthly activity performance of users accessing Plastico service.</p>
                    <div class="chart">
                        <canvas id="userperfChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

<script src="js/user.js"></script>